doctype html
html
	head
		title Log In
		link(rel='stylesheet', type='text/css', href='./css/bootstrap.min.css')
		link(rel='stylesheet', type='text/css', href='./css/style.css')
	body
		.bgwrap
			video#bgvid(autoplay='true', loop='loop', muted='muted', poster='', preload='auto')
				source(src='./css/space.webm', type='video/webm')
		p No account yet
		a(href='/registration') Register here
		.container
			.row
				.col-md-offset-4
					form(action='/index', method='POST')
						.form-group.row
							.form-group.col-md-6
								label(for='username') Username:
								input#username.form-control(name='username', placeholder='Enter Username', type='text', size='30', required='')
						.form-group.row
							.form-group.col-md-6
								label(for='password') Password:
								input#password.form-control(name='password', placeholder='Enter Password', type='password', size='30', required='')
						.form-group.col-md-6
							button.btn.btn-primary(type='submit') Log In

