doctype html
html
	head
		title Log In
		link(rel='stylesheet', type='text/css', href='./css/bootstrap.min.css')
		link(rel='stylesheet', type='text/css', href='./css/style.css')
	body.loginpage
		.container
			.row
				.col-md-offset-4
					form(action='/index', method='POST')
						.form-group.row
							.form-group.col-md-6
								label(for='username') Username:
								input#username.form-control.input-lg(name='username', placeholder='Enter Username', type='text', size='30', required='')
						.form-group.row
							.form-group.col-md-6
								label(for='password') Password:
								input#password.form-control.input-lg(name='password', placeholder='Enter Password', type='password', size='30', required='')
						.form-group.col-md-6
							button.btn.btn-primary(type='submit') Log In
